<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="001" author="Oleg Kucherenko" context="structure">
        <comment>Create users table</comment>

        <createTable tableName="users">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="username" type="varchar">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="full_name" type="varchar">
                <constraints nullable="false" unique="false"/>
            </column>
            <column name="email" type="varchar">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="phone" type="varchar">
                <constraints nullable="true" unique="true"/>
            </column>
            <column name="password" type="varchar">
                <constraints nullable="false" unique="false"/>
            </column>
            <column name="role" type="varchar">
                <constraints nullable="false" unique="false"/>
            </column>
            <column name="gender" type="varchar">
                <constraints nullable="true" unique="false"/>
            </column>
            <column name="age_group" type="varchar">
                <constraints nullable="true" unique="false"/>
            </column>
        </createTable>

        <sqlFile path="sql/dummy_users.sql" relativeToChangelogFile="true" endDelimiter=";" splitStatements="true"/>
    </changeSet>

</databaseChangeLog>